<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="30dp"
    android:background="@color/lightGray">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="4dp"
        android:textStyle="bold"
        android:text="아이디"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp">
        <EditText
            android:id="@+id/editTextId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:background="@drawable/white_square_background"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:hint="아이디" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <android.widget.Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:layout_gravity="center"
            android:background="@drawable/gray_square_background"
            android:stateListAnimator="@null"
            android:textSize="16sp"
            android:text="중복확인"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:textColor="@color/red"
        android:text="아이디를 입력해주세요."/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:textStyle="bold"
        android:text="비밀번호"/>
    <EditText
        android:id="@+id/editTextPw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_square_background"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        android:layout_marginVertical="4dp"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:hint="비밀번호" />
    <EditText
        android:id="@+id/editTextPwCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/white_square_background"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        android:layout_marginVertical="4dp"
        android:layout_gravity="center"
        android:textSize="16sp"
        android:hint="비밀번호 확인" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:textColor="@color/red"
        android:text="비밀번호를 입력해주세요."/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:textStyle="bold"
        android:text="이메일"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp">
        <EditText
            android:id="@+id/editTextUsername"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="13"
            android:background="@drawable/white_square_background"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:hint="jagyeokinna@example.com" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <android.widget.Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:layout_gravity="center"
            android:background="@drawable/gray_square_background"
            android:stateListAnimator="@null"
            android:textSize="16sp"
            android:text="인증"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:textColor="@color/red"
        android:text="이메일을 입력해주세요."/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <android.widget.Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gray_square_background"
        android:stateListAnimator="@null"
        android:layout_marginVertical="20dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="다음으로"/>

</LinearLayout>