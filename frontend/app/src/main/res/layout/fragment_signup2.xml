<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="30dp"
    android:background="@color/lightGray">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="4dp"
        android:textStyle="bold"
        android:text="아이디"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp">
        <EditText
            android:id="@+id/edittext_id"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:background="@drawable/bg_edittext"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:inputType="text"
            android:hint="아이디" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <android.widget.Button
            android:id="@+id/button_id_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:layout_gravity="center"
            android:background="@drawable/gray_square"
            android:stateListAnimator="@null"
            android:textSize="16sp"
            android:text="중복확인"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textview_error_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:visibility="invisible"
        android:textColor="@color/red"
        android:text="아이디를 입력해주세요."/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:textStyle="bold"
        android:text="비밀번호"/>
    <EditText
        android:id="@+id/edittext_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        android:layout_marginVertical="4dp"
        android:layout_gravity="center"
        android:inputType="textPassword"
        android:textSize="16sp"
        android:hint="비밀번호" />
    <EditText
        android:id="@+id/edittext_pw_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext"
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        android:layout_marginVertical="4dp"
        android:layout_gravity="center"
        android:inputType="textPassword"
        android:textSize="16sp"
        android:hint="비밀번호 확인" />
    <TextView
        android:id="@+id/textview_error_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:visibility="invisible"
        android:textColor="@color/red"
        android:text="비밀번호를 입력해주세요."/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:textStyle="bold"
        android:text="이메일"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp">
        <EditText
            android:id="@+id/edittext_email"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="13"
            android:background="@drawable/bg_edittext"
            android:paddingHorizontal="15dp"
            android:paddingVertical="10dp"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:inputType="textEmailAddress"
            android:hint="jagyeokinna@example.com" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
        <android.widget.Button
            android:id="@+id/button_email_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingHorizontal="10dp"
            android:layout_gravity="center"
            android:background="@drawable/gray_square"
            android:stateListAnimator="@null"
            android:textSize="16sp"
            android:text="인증"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textview_error_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:visibility="invisible"
        android:textColor="@color/red"
        android:text="이메일을 입력해주세요."/>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <android.widget.Button
        android:id="@+id/button_next"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_button_indigo"
        android:enabled="false"
        android:stateListAnimator="@null"
        android:layout_marginVertical="20dp"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:text="다음으로"/>

</LinearLayout>