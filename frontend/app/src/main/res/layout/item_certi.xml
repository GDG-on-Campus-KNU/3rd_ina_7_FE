<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.MainActivity"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    android:background="@drawable/certi_item_background"
    android:layout_margin="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/certi_title_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="paretn">

        <TextView
            android:id="@+id/certi_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="산업안전지도사"
            android:textColor="@color/main_color"
            android:textStyle="bold"
            android:textSize="12sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/bookmark_btn"/>

        <ImageButton
            android:id="@+id/bookmark_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/bookmark_off_icon"
            android:background="@android:color/transparent"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toStartOf="@id/like_btn"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ImageButton
            android:id="@+id/like_btn"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/like_off_icon"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/schedule_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/certi_title_box">

        <TextView
            android:id="@+id/schedule_tag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="시험일정"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="8sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/certi_schedule"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="14회 1차 2024.03.30."
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="8sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/schedule_tag"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/org_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/schedule_box">

        <TextView
            android:id="@+id/org_tag"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="시행기관"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="8sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/certi_org"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="한국산업인력공단"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="8sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_marginStart="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/org_tag"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/certi_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="국가전문자격/고용노동부"
        android:textColor="@color/gray1"
        android:textStyle="bold"
        android:textSize="8sp"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/org_box"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>